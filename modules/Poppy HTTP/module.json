		{
			"menu":"LED",
			"callback":"setAllLeds",
			"parameters": {
				"colorSendMode":
				{
					"type":"Enum",
					"options":{"off":0, "red":1, "green":2, "yellow":3, "blue":4, "purple":5, "cyan":6, "white":7}
				}
			}
		},
		"Get Angles":
		{
			"menu":"Motors",
			"callback":"getAngles",
		},

		"Disable":
		{
			"menu":"Motors",
			"callback":"disable"
		},
