{
	"name": "Poppy Ergo HTTP",
	"type": "HTTP",
	"path": "M2 Création Numérique",

	"version": "1.0.0",
	"description": "Pilotage de Poppy Ergo par requêtes HTTP",

	"hasInput": true,
	"hasOutput": true,

	"hideDefaultCommands": true,
	"hideDefaultParameters": [
		"protocol", "authentication", "clearValues"
	],

	"defaults":
	{
		"baseAddress":"http://10.0.0.101:5000/",
		"protocol":"JSON",
		"autoAdd":false
	},

	"scripts":
	[
		"poppy.js"
	],

	"values":
	{
		"Angle 1":
		{
			"type":"Integer",
			"default":0,
      		"readOnly":true
		},
		"Angle 2":
		{
			"type":"Integer",
			"default":0,
      		"readOnly":true
		},
		"Angle 3":
		{
			"type":"Integer",
			"default":0,
      		"readOnly":true
		},
		"Angle 4":
		{
			"type":"Integer",
			"default":0,
